import React, {useState} from 'react';
import { Text, View, TouchableOpacity } from 'react-native';
import * as Speech from 'expo-speech';
 
 
const HelloWorldApp = () => {
 
  const [dolphin, setDolphin] = useState('‚ùì')
 
  const flipDolphin = ()=>{
    setDolphin('üê¨')
    Speech.speak('Dolphin')
  }
  
  setTimeout(()=>{
   setDolphin('‚ùì')
  },2000)



  const [tiger, setTiger] = useState('‚ùì')
 
  const flipTiger = ()=>{
    setTiger('üêÖ')
    Speech.speak('tiger')
  }
  
  setTimeout(()=>{
   setTiger('‚ùì')
  },2000)





const [cat, setCat] = useState('‚ùì')
 
  const flipCat= ()=>{
    setCat(' üêà ')
    Speech.speak('cat')
  }
  
  setTimeout(()=>{
   setCat('‚ùì')
  },2000)
 


 const [dog, setDog] = useState('‚ùì')
 
  const flipDog= ()=>{
    setDog(' ü¶Æ ')
    Speech.speak('dog')
  }
  
  setTimeout(()=>{
   setDog('‚ùì')
  },2000)
 



 const [cow, setCow] = useState('‚ùì')
 
  const flipCow= ()=>{
    setCow(' ü¶Æ ')
    Speech.speak('cow')
  }
  
  setTimeout(()=>{
   setCow('‚ùì')
  },2000)
 




  const [ Sheep, setSheep] = useState('‚ùì')
 
  const flipSheep= ()=>{
    setSheep(' ü¶Æ ')
    Speech.speak(' Sheep')
  }
  
  setTimeout(()=>{
   setSheep('‚ùì')
  },2000)
 




  return (
    <View style={{
        flex: 1,   justifyContent: 'center',
        alignItems: 'center'
      }}>
 
     
     <TouchableOpacity onPress={()=>flipDolphin()}>
       <Text style={{fontSize:50}}>{dolphin}</Text>
     </TouchableOpacity>




       <TouchableOpacity onPress={()=>flipTiger()}>
       <Text style={{fontSize:50}}>{tiger}</Text>
     </TouchableOpacity>
     



<TouchableOpacity onPress={()=>flipCat()}>
       <Text style={{fontSize:50}}>{cat}</Text>
     </TouchableOpacity>



<TouchableOpacity onPress={()=>flipDog()}>
       <Text style={{fontSize:50}}>{dog}</Text>
     </TouchableOpacity>     
          



<TouchableOpacity onPress={()=>flipCow()}>
       <Text style={{fontSize:50}}>{cow}</Text>
     </TouchableOpacity>     




<TouchableOpacity onPress={()=>flipSheep()}>
       <Text style={{fontSize:50}}>{Sheep}</Text>
     </TouchableOpacity>                 
    </View>
  );
}
 
export default HelloWorldApp;
